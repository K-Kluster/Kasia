{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "kasia",
  "version": "0.1.0",
  "identifier": "com.kasia.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:staging",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "title": "kasia",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
